<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@id/start"
        app:duration="1500"
        app:autoTransition="animateToEnd">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/asteroide_esquina_sup_izq"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:translationX="-150dp"
            android:translationY="-150dp"
            android:alpha="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/planeta_esquina_inf_der"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:translationX="200dp"
            android:translationY="200dp"
            android:alpha="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/nebulosa_borde_der"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:translationX="100dp"
            android:alpha="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Constraint
            android:id="@+id/logo_nova"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:alpha="0.0"
            android:scaleX="0.2"
            android:scaleY="0.2"
            app:layout_constraintBottom_toTopOf="@+id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/nombre_app"
            android:alpha="0.0"
            app:layout_constraintTop_toTopOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/frase_app"
            android:alpha="0.0"
            app:layout_constraintTop_toBottomOf="@id/nombre_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/boton_iniciar"
            android:alpha="0.0"
            app:layout_constraintTop_toBottomOf="@id/frase_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Constraint
            android:id="@+id/cluster_esquina_sup_der"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:translationX="150dp"  android:translationY="-150dp" android:alpha="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/cometa_borde_izq"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:translationX="150dp"  android:translationY="-150dp" android:alpha="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/luna_esquina_inf_izq"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:translationX="-150dp" android:translationY="150dp"  android:alpha="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end" />

</MotionScene>