        </LinearLayout>

        <!-- Título Planetas Enanos -->
        <TextView
            android:id="@+id/title_planetas_enanos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Planetas Enanos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#C77DFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <!-- Fila Enanos 1: Plutón | Ceres -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_pluton"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3C0366">

                    <ImageView
                        android:id="@+id/icon_pluton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/pluton"
                        app:layout_constraintTop_toTopOf="parent"
