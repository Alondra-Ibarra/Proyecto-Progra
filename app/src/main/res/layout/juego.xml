<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/constelacion_cruz">

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="84dp"
        android:background="#80000000"
        android:gravity="center"
        android:padding="16dp"
        android:text="¿Cuál es el planeta más grande?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="40sp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/btnCarril1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/ivNave"
        app:layout_constraintEnd_toStartOf="@+id/btnCarril2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPregunta">

        <ImageView
            android:id="@+id/imgAsteroide1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/asteroide" />

        <TextView
            android:id="@+id/tvRespuesta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Opción A"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnCarril2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/ivNave"
        app:layout_constraintEnd_toStartOf="@+id/btnCarril3"
        app:layout_constraintStart_toEndOf="@+id/btnCarril1"
        app:layout_constraintTop_toBottomOf="@+id/tvPregunta">

        <ImageView
            android:id="@+id/imgAsteroide2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/asteroide" />

        <TextView
            android:id="@+id/tvRespuesta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Opción B"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnCarril3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/ivNave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCarril2"
        app:layout_constraintTop_toBottomOf="@+id/tvPregunta">

        <ImageView
            android:id="@+id/imgAsteroide3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/asteroide" />

        <TextView
            android:id="@+id/tvRespuesta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Opción C"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </FrameLayout>

    <ImageView
        android:id="@+id/ivNave"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/nave_ovni" />

</androidx.constraintlayout.widget.ConstraintLayout>