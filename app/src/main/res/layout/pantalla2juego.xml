<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#252538"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡ASTEROIDE DESTRUIDO!"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMensaje2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mc Alien celebra tu victoria."
            android:textColor="#DDDDDD"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/marciano_celeb" />

        <TextView
            android:id="@+id/tvEtiquetaPuntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SU PUNTAJE ES:"
            android:textColor="#B0B0C3"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPuntajeValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFD700"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnMenu"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Menú"
                android:textColor="#FF5252"
                app:strokeColor="#FF5252" />

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4CAF50"
                android:text="Siguiente"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>